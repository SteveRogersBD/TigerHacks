<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    app:cardCornerRadius="16dp"
    android:background="@color/white"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/poster_video"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Farming"
            android:src="@drawable/farming"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chanel_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/cap"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="8dp"> <!-- Added marginStart for better alignment -->

                <TextView
                    android:id="@+id/caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Win $1,000,000"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="3dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:minHeight="48dp" /> <!-- Set minimum height -->

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Win $1,000,000"
                    android:textColor="#978F8F"
                    android:textSize="15sp"
                    android:padding="3dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:minHeight="40dp" /> <!-- Set minimum height -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
