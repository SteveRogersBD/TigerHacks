<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cloud" />


    <!-- Temperature -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/icon_temperature"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_device_thermostat_24" />

        <TextView
            android:id="@+id/weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature: 25Â°C"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Humidity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_humidity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/humidity" />

        <TextView
            android:id="@+id/weather_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity: 60%"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Rain -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_rain"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rain" />

        <TextView
            android:id="@+id/weather_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rain: 15mm"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Wind Speed -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_wind_speed"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/wind" />

        <TextView
            android:id="@+id/weather_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind Speed: 10 km/h"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- UV Index -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_uv_index"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/uv_index" />

        <TextView
            android:id="@+id/weather_uv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UV Index: 0"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/weather_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Raleigh, NC"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
